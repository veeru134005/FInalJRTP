package com.hcsc.controller;

import java.util.Date;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;

import com.hcsc.entity.UserRegistration;
import com.hcsc.repository.UserRegistrationRepo;

@RestController
public class UserRestController {

	@Autowired
	private UserRegistrationRepo registrationRepo;

	@GetMapping("/save")
	public String userSave() {
		UserRegistration ur = new UserRegistration();
		ur.setDob(new Date());
		ur.setEmailId("babu.veera@gmail.com");
		ur.setGender("M");
		ur.setMobileNumber(854888485l);
		ur.setId("Ind");
		UserRegistration save = registrationRepo.save(ur);

		System.out.println(save);
		return "sucess";
	}
}
